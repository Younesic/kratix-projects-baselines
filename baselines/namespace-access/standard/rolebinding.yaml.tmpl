apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: ${NS_NAME}-developer
  namespace: ${NS_NAME}
  labels:
    project: ${PROJECT}
    team: ${TEAM}
    environment: ${ENV}
    baseline.kratix.io/version: ${BASELINE_VERSION}
    baseline.kratix.io/size: ${ACCESS_LEVEL}
  annotations:
    baseline.kratix.io/version: ${BASELINE_VERSION}
    baseline.kratix.io/size: ${ACCESS_LEVEL}
subjects:
  - kind: Group
    name: ${GROUP_NAME}
    apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: Role
  name: ${NS_NAME}-developer
  apiGroup: rbac.authorization.k8s.io
